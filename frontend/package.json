{
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:coverage:html": "vitest --coverage && npx serve coverage",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --coverage --reporter=junit --reporter=default",
    "test:medical": "vitest --run --coverage --config vitest.medical.config.ts",
    "coverage:check": "vitest run --coverage && node scripts/check-coverage.js",
    "coverage:report": "nyc report --reporter=html --reporter=text --reporter=lcov",
    "coverage:badge": "coverage-badge-creator --output coverage/badge.svg"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-istanbul": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "c8": "^8.0.1",
    "coverage-badge-creator": "^1.0.0",
    "nyc": "^15.1.0"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "exclude": [
      "src/**/*.test.{js,jsx,ts,tsx}",
      "src/**/*.spec.{js,jsx,ts,tsx}",
      "src/**/*.d.ts",
      "src/vite-env.d.ts",
      "src/main.tsx",
      "src/setupTests.ts"
    ],
    "reporter": [
      "html",
      "text",
      "lcov",
      "json"
    ],
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80
  }
