# Development environment configuration for CardioAI Pro
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000
VITE_STANDALONE_MODE=false
VITE_ENVIRONMENT=development

# Medical compliance configuration
VITE_MEDICAL_COMPLIANCE_LEVEL=HIPAA
VITE_AUDIT_LOGGING=true
VITE_DATA_RETENTION_DAYS=2555

# Feature flags
VITE_ENABLE_ADVANCED_VISUALIZATIONS=true
VITE_ENABLE_AI_DIAGNOSTICS=true
VITE_ENABLE_HOLOGRAPHIC_UI=true
VITE_ENABLE_ECG_ANALYSIS=true
VITE_ENABLE_REAL_TIME_MONITORING=true

# UI configuration
VITE_THEME=medical-dark
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_GLASSMORPHISM=true
VITE_ENABLE_MEDICAL_GLOW_EFFECTS=true

# Security configuration
VITE_ENABLE_SECURE_MODE=true
VITE_SESSION_TIMEOUT=30

# Performance configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_BUNDLE_ANALYZER=false

# Medical device compatibility
VITE_SUPPORT_TOUCH_DEVICES=true
VITE_SUPPORT_HIGH_DPI=true
VITE_SUPPORT_WALL_MOUNT_DISPLAYS=true
